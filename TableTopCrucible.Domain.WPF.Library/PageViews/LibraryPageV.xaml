<Page x:Class="TableTopCrucible.Domain.WPF.Library.PageViews.LibraryPageV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TableTopCrucible.Domain.WPF.Library.PageViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPageV">

    <Grid Margin="4px">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label>library page works</Label>
        <ContentPresenter Content="{Binding ItemList}"
                          Grid.Column="0"
                          Grid.Row="0"/>
        <GridSplitter Grid.Column="0"
                      Grid.Row="0"
                      HorizontalAlignment="Right"
                      Width="4px"/>
        <ContentPresenter Content="{Binding ItemViewer}"
                          Grid.Column="1"
                          Grid.Row="0"/>
    </Grid>
</Page>
