<UserControl x:Class="TableTopCrucible.Core.UserControls.DirectoryPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TableTopCrucible.Core.UserControls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="DirPicker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <TextBox md:TextFieldAssist.TrailingIcon="Folder"
                 md:TextFieldAssist.HasTrailingIcon="True"
                 Text="{Binding 
                    ElementName=DirPicker,
                    Path=UserText,
                    UpdateSourceTrigger=PropertyChanged}"
                 md:HintAssist.Hint="{Binding 
                    ElementName=DirPicker ,
                    Path=Hint}"/>
        <Button Margin="0 0 6 0"
                ToolTip="Open Select Directory Dialog"
                Style="{StaticResource MaterialDesignIconButton}"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Click="ButtonBase_OnClick">
            <md:PackIcon Kind="Folder"/>
        </Button>
    </Grid>
</UserControl>
