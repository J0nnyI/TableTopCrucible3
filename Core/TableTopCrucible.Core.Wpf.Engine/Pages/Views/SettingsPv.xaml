<rx:ReactiveUserControl x:Class="TableTopCrucible.Core.Wpf.Engine.Pages.Views.SettingsPv"
                        x:TypeArguments="pvm:SettingsPvm"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:rx="http://reactiveui.net"
                        xmlns:pvm="clr-namespace:TableTopCrucible.Core.Wpf.Engine.Pages.ViewModels"
                        mc:Ignorable="d" 
                        d:DesignHeight="450" 
                        d:DesignWidth="800"
                        d:DataContext="{d:DesignInstance pvm:SettingsPvm}">
    <Grid>
        <ListView x:Name="SettingsList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Title}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</rx:ReactiveUserControl>
