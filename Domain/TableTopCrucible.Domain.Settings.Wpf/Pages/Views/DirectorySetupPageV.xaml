<rxui:ReactiveUserControl x:Class="TableTopCrucible.Domain.Settings.Wpf.Pages.DirectorySetupPageV"
                        x:TypeArguments="pvm:DirectorySetupPageVm"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                        xmlns:local="clr-namespace:TableTopCrucible.Domain.Settings.Wpf.Pages"
                        xmlns:rxui="http://reactiveui.net"
                        xmlns:pvm="clr-namespace:TableTopCrucible.Domain.Settings.Wpf.PageViewModels"
                        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                        mc:Ignorable="d" 
                        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <md:DialogHost Identifier="{Binding}" Grid.Row="0"
                       Grid.RowSpan="2"/>
        <rxui:ViewModelViewHost x:Name="DirectorySetupList"
                                MaxWidth="1000"
                                Margin="20"
                                Grid.Row="1"/>
    </Grid>
</rxui:ReactiveUserControl>
