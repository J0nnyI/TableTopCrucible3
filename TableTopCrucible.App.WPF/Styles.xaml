<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TableTopCrucible.App.WPF">

    <Style TargetType="Grid">
        <!--<Setter Property="Background" Value="Transparent"/>-->
        <Setter Property="Background" Value="{StaticResource MaterialDesignDarkBackground}"/>
    </Style>
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource MaterialDesignDarkBackground}"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="BorderBrush"
                Value="{StaticResource MaterialDesignTextBoxBorder}"/>
        <!--<Setter Property="BorderThickness"
                Value="3"/>-->

        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground"
                Value="{StaticResource MaterialDesignDarkForeground}"/>
        <Style.Resources>
            <Style TargetType="Grid">
                <Setter Property="Background"
                        Value="Transparent"/>
            </Style>
        </Style.Resources>
        <!--Value="{StaticResource MaterialDesignTextFieldBoxBackground}"/>-->
    </Style>
    <!--<Style TargetType="Window">

        <Setter Property="Background"
                Value="Blue"/>

    </Style>-->
</ResourceDictionary>