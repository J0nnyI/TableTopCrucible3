<Page x:Class="TableTopCrucible.DomainCore.WPF.Startup.PageViews.StartupPageV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TableTopCrucible.DomainCore.WPF.Startup.PageViews"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartupPageV">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource MaterialDesignHeadline1TextBlock}" 
                   Text="TableTopCrucible"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   HorizontalAlignment="Center"/>
        <ContentPresenter Content="{Binding Path=MasterFileList}"
                            Grid.Row="1"
                            Grid.Column="1"/>
        <TextBlock Text="Get Started"
                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                    Grid.Row="1"
                    Grid.Column="2"/>
        <StackPanel Grid.Row="2"
                    Grid.Column="2"
                    Orientation="Horizontal">
            <TextBlock Text="Create a new library"/>

            <StackPanel HorizontalAlignment="Right">

                <Border x:Name="border" 
                        CornerRadius="20"
                        Background="{StaticResource MaterialDesignLightBackground}"
                        BorderThickness="0">
                    <md:PackIcon Kind="Plus"
                                 Foreground="{StaticResource MaterialDesignLightForeground}"
                                 Height="40"
                                 Width="40"/>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
