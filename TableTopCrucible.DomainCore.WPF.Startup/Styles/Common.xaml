<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="MasterFileOptionTitle"
           TargetType="TextBlock" 
           BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}"/>

    <Style x:Key="FileCardTitle"
           TargetType="TextBlock"
           BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="FileCard"
           TargetType="md:Card">
        <Setter Property="Margin" Value="8"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Resources>
            <Style TargetType="md:Ripple">
                <Setter Property="Feedback" Value="#ABABAB"/>
                <Setter Property="Padding" Value="18"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
        </Style.Resources>
    </Style>


    <Style TargetType="Border" 
           x:Key="IconContainer"
           BasedOn="{StaticResource RoundIconContainer}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>